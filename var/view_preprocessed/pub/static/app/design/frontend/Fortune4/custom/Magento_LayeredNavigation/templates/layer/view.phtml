<?php /** * Custom Layered Navigation Template * * This template outputs the layered navigation filters in a horizontal navbar, * with each filter rendered as a button that shows its options in a dropdown on hover. * * @var $block \Magento\LayeredNavigation\Block\Navigation */ ?> <?php if ($block->canShowBlock()) : ?> <div class="filter-navbar layered-navigation mb-5"><!-- Loop through each filter --><?php foreach ($block->getFilters() as $filter) : ?> <?php if ($filter->getItemsCount()) : ?> <div class="navbar-item"><!-- The filter title --><span class="filter-button"><?= $block->escapeHtml(__($filter->getName())) ?> <i class="fa fa-chevron-down"></i></span> <!-- Dropdown container for filter options --><div class="dropdown-content"><?= $block->getChildBlock('renderer')->render($filter) ?></div></div><?php endif; ?> <?php endforeach; ?> <!-- Optional: A Clear All Filters button --><?php if ($block->getLayer()->getState()->getFilters()) : ?> <div class="navbar-item"><button class="filter-button clear-filters" onclick="location.href='<?= $block->escapeUrl($block->getClearUrl()) ?>'"><?= $block->escapeHtml(__('Clear All')) ?></button></div><?php endif; ?></div><?php endif; ?>