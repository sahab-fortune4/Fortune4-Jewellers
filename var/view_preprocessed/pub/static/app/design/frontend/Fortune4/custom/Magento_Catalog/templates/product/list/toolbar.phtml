<?php /** * Customized dynamic sorter template with a validation condition. * * This template renders the sorting dropdown only if there are products in the collection. * * @var $block \Magento\Catalog\Block\Product\ProductList\Toolbar */ ?> <?php if ($block->getCollection() && $block->getCollection()->getSize() > 0): ?> <div class="sorting toolbar-sorter" style="display: flex; align-items: center;"><label class="sorter-label" for="sorter"><?= $block->escapeHtml(__('View By:')) ?></label> <div class="dropdown"><?php $availableOrders = $block->getAvailableOrders(); $currentOrder = $block->getCurrentOrder(); ?> <ul id="sorter" class="sorter-options"><?php foreach ($availableOrders as $key => $order): ?> <li data-role="sorter" data-value="<?= $block->escapeHtmlAttr($key) ?>" class="sort-items <?= ($currentOrder == $key) ? 'active' : '' ?>"><a href="<?= $block->getOrderUrl($key) ?>"><?= $block->escapeHtml(__($order)) ?></a></li> <?php endforeach; ?></ul></div></div><?php endif; ?>